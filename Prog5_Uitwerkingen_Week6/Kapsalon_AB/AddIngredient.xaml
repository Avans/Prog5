<Window x:Class="Kapsalon_AB.AddIngredient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddIngredient" Height="300" Width="300"
          DataContext="{Binding Main, Source={StaticResource Locator}}">
    <StackPanel>
        <TextBlock>Naam</TextBlock>
        <TextBox Text="{Binding SelectedIngredient.Naam}"></TextBox>
        <TextBlock>Prijs</TextBlock>
        <TextBox Text="{Binding SelectedIngredient.Prijs}"></TextBox>
        <Button Command="{Binding SaveIngredientCommand}">Save</Button>
    </StackPanel>
</Window>
