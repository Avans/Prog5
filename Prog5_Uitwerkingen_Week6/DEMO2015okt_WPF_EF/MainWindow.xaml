<Window x:Class="Demo_EntityFramework_groepKL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding Main, Source={StaticResource LocatorDemo}}"  >
    <Grid>
    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Broodjes}">
      <DataGrid.Columns>
        <DataGridTextColumn Header="id" Binding="{Binding ID}" />
        <DataGridTextColumn Header="type" Binding="{Binding Type}" />
        <DataGridTextColumn Header="naam" Binding="{Binding Name}" />
        
      </DataGrid.Columns>
    </DataGrid>

  </Grid>
</Window>
